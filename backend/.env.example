# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (MongoDB Atlas for production)
MONGODB_URI=mongodb://localhost:27017/personal-library-tracker
# Production example: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/personal-library-tracker?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_replace_with_random_string
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_replace_with_random_string
JWT_REFRESH_EXPIRE=30d

# Google Books API
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5000000

# Frontend URL (for CORS) - update with your Vercel URL for production
FRONTEND_URL=http://localhost:3000
# Production example: https://your-app-name.vercel.app

